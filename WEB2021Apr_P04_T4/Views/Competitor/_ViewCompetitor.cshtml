@model IEnumerable<WEB2021Apr_P04_T4.Models.Competitor>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Competitor ID</th>
                    <th>Date of Birth</th>
                    <th>Phone number</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CompetitorID.ToString()</td>
                        <td>@item.CompetitorName</td>
                        <td>
                            <a asp-action="Edit" asp-controller="AreaInterest"
                               asp-route-id="@item.CompetitorID">Edit</a> |
                            <a asp-action="Details" asp-controller="AreaInterest"
                               asp-route-id="@item.CompetitorID">Details</a> |
                            <a asp-action="Delete" asp-controller="AreaInterest"
                               asp-route-id="@item.CompetitorID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
