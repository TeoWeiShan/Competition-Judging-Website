@model IEnumerable<WEB2021Apr_P04_T4.Models.CompetitionSubmission>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewSubmission" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Competitor ID</th>
                    <th>File Submitted</th>
                    <th>Date/Time Submitted</th>
                    <th>Ranking</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CompetitorID.ToString()</td>
                        <td>
                            @{if (item.FileSubmitted == null)
                                {<p> NIL </p>}
                                else
                                {
                                    @item.FileSubmitted
                                }
                            }
                        </td>
                        <td>
                            @{if (@item.DateTimeFileUpload == null)
                                {<p> NIL </p>}
                                else
                                {
                                    @item.DateTimeFileUpload.ToString()
                                }
                            }
                        </td>
                        <td>
                            @{if (@item.Ranking == null)
                                {<p> NIL </p>}
                                else
                                {
                                    @item.Ranking.ToString()
                                }
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="CompetitionSubmission"
                               asp-route-id="@item.CompetitorID">Edit Ranking</a> |
                            <a asp-action="Details" asp-controller="CompetitionSubmission"
                               asp-route-id="@item.CompetitorID">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No submissions found!</span>
}