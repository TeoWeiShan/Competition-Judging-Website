@model IEnumerable<WEB2021Apr_P04_T4.Models.CompetitionScore>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewCompetitionScore" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Criteria ID</th>
                    <th>Competitor ID</th>
                    <th>Competition ID</th>
                    <th>Score</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.CriteriaID.ToString()</td>
                    <td>@item.CompetitorID.ToString()</td>
                    <td>@item.CompetitionID.ToString()</td>
                    <td>@item.Score.ToString()</td>
                    <td>
                        <a asp-action="Edit" asp-controller="CompetitionScore"
                           asp-route-id="@item.CompetitionID">Edit Score</a> |
                        <a asp-action="Details" asp-controller="CompetitionSubmission"
                           asp-route-id="@item.CompetitionID">Details</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No competition submission to grade.</span>
}