@model IEnumerable<WEB2021Apr_P04_T4.Models.Judge>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewJudgeProfile" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Judge ID</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.JudgeID.ToString()</td>
                        <td>@item.JudgeName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}