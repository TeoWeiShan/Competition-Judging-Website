@model IEnumerable<WEB2021Apr_P04_T4.Models.Judge>

@{
    ViewData["Title"] = "Details";
}

<h4 class="PageTitle">View Competition Judges</h4>
<hr />

<div class="container">
    <div class="row">
       <div class="col text-left"><a  asp-action="Create" asp-controller="CompetitionJudge" asp-route-id="@ViewData["CompetitionID"]">Add Judge</a></div>
        <div class="col text-right"><a  asp-action="Delete" asp-controller="CompetitionJudge" asp-route-id="@ViewData["CompetitionID"]">Remove Judge</a></div>
    </div>
</div>
    <fieldset class="FormContent">
        <div class="form-group row">
            <div class="col-sm-1 col-form-label"></div>
            <label class="col-sm-10 col-form-label text-center">
                @ViewData["CompetitionName"]
            </label>
            <div class="col-sm-1 col-form-label"></div>
        </div>
        @if (Model.ToList().Count > 0)
        {
            <div class="table-responsive">
                <table id="viewStaff" class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.JudgeID.ToString()</td>
                                <td>@item.JudgeName </td>
                                <td>
                                    <a asp-action="Edit" asp-controller="CompetitionJudge"
                                       asp-route-id="@item.JudgeID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <span style="color:red">No record found!</span>
        }
    </fieldset>
