@model WEB2021Apr_P04_T4.Models.CompetitionViewModel

@{
    ViewData["Title"] = "Join";
}

<h4 class="PageTitle">View Competition</h4>
<hr />


<form asp-action="Edit">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="CompetitionID"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="CompetitionID" readonly
                       class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CompetitionName"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="CompetitionName" readonly 
                       class="form-control" />
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="StartDate"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="StartDate" readonly 
                       class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EndDate"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="EndDate" readonly
                       class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ResultReleasedDate"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="ResultReleasedDate" readonly
                       class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Join"
                       class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a asp-action="Create">Back to List</a>
        </div>
    </fieldset>
</form>
