@model WEB2021Apr_P04_T4.Models.CompetitionViewModel

@{
    ViewData["Title"] = "Details";
}
<h4 class="PageTitle">View Competition Details</h4>
<hr />
<fieldset class="FormContent">
    <div class="form-group row">
        <label asp-for="CompetitionID"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("CompetitionID")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("Name")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CompetitionName"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("CompetitionName")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="StartDate"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("StartDate")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EndDate"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("EndDate")
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ResultReleasedDate"
               class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9 form-control-plaintext">
            @Html.Display("ResultReleasedDate")
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-9 offset-sm-3">
            <a asp-action="Index"
               asp-controller="CompetitorCompetition">Back to List</a>
        </div>
    </div>
</fieldset>
