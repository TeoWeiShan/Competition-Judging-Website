@model IEnumerable<WEB2021Apr_P04_T4.Models.Competition>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Competition ID</th>
                    <th>Competition Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.CompetitionID.ToString()</td>
                    <td>@item.CompetitionName</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Competition"
                           asp-route-id="@item.CompetitionID">Edit</a> |
                        <a asp-action="Details" asp-controller="Competition"
                           asp-route-id="@item.CompetitionID">Details</a> |
                        <a asp-action="Delete" asp-controller="Competition"
                           asp-route-id="@item.CompetitionID">Delete</a> |
                        <a asp-action="Details" asp-controller="CompetitionJudge"
                           asp-route-id="@item.CompetitionID">View Judges</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}