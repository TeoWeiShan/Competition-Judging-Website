@model IEnumerable<WEB2021Apr_P04_T4.Models.Judge>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewJudgeProfile" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Judge ID</th>
                    <th>Name</th>
                    <th>Salutation</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.JudgeID.ToString()</td>
                    <td>@item.JudgeName</td>
                    <td>@item.Salutation</td>
                    <td>@item.EmailAddr</td>
                    <td>
                        <a asp-action="Edit" asp-controller="JudgeProfile"
                           asp-route-id="@item.JudgeID">Edit</a> |
                        <a asp-action="Details" asp-controller="JudgeProfile"
                           asp-route-id="@item.JudgeID">Details</a>
                        <!-- <a asp-action="Delete" asp-controller="JudgeProfile"
                                asp-route-id="@item.JudgeID">Delete</a> -->
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}